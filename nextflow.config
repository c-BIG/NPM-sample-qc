// global configuration
params {
    // execution
    container = "npm-sample-qc.simg"
    // output
    keep_workdir = "false"
    publishdir = "./results"
    infodir = "${params.publishdir}/pipeline_info"
    // resources
    resourcesdir = "/data/13000026/pipeline/dev/NPM-sample-qc/resources"
    ref_fa = "${params.resourcesdir}/Homo_sapiens_assembly38.fasta"
    dbsnp_vcf = "${params.resourcesdir}/common_all_20180418.chr.vcf.gz"
    vbi2_svdprefix = "${params.resourcesdir}/1000g.phase3.10k.b38.vcf.gz.dat"
}

// environment-specific configuration
profiles {
    local {
        includeConfig 'conf/base.config'
        includeConfig 'conf/local.config'
    }
    nscc {
        includeConfig 'conf/base.config'
        includeConfig 'conf/nscc.config'
    }
}

// sample-specific configuration
// to be provided through args
// see tests/sample_params.yml for an example

// generate trace
trace {
    enabled = true
    file = "${params.infodir}/trace.txt"
}

// generate timeline
timeline {
    enabled = true
    file = "${params.infodir}/timeline.html"
}

// generate dag
dag {
    enabled = true
    file = "${params.infodir}/dag.pdf"
}
