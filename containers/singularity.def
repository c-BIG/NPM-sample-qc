Bootstrap: docker
From: ubuntu:22.04

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    export PATH="/usr/local/conda/envs/npm-sample-qc/bin/:$PATH"
    export PATH="/usr/local/conda/envs/npm-sample-qc/share/verifybamid2-2.0.1-7/:$PATH"
    export PATH="/usr/local/conda/envs/npm-sample-qc/share/picard-2.27.0-0/:$PATH"
    export PATH="/usr/local/conda/bin/:$PATH"

%files
    conda_env.yml /

%post
    # gather essential packages
    apt-get update
    apt-get install -y \
      build-essential \
      libtool \
      libarchive-dev \
      make cmake m4 automake \
      gcc g++ \
      python3 python-pip python-dev-is-python3 \
      git \
      wget \
      gnuplot \
      datamash

    # install conda
    wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -b -p /usr/local/conda
    export PATH="/usr/local/conda/bin:$PATH"
    conda update -n base -c defaults conda

    # create conda environment from template
    conda env create -f /conda_env.yml
    conda clean -a

    # install MultiQC and MultiQC_NPM plugin
    git clone https://github.com/c-BIG/MultiQC_NPM.git
    cd MultiQC_NPM
    python3 setup.py install

    # create mountpoints for NSCC
    mkdir /data /seq /secure /scratch
